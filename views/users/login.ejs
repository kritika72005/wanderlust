<% layout("/layouts/boilerplate") %>

<div class="row mt-3 mt-3 mb-5">
  <h1 class="col-6 offset-3 mt-3 mb-5">Login</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mb-5">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mb-5 mt-3">Login</button>
    </form>
  </div>
</div>
